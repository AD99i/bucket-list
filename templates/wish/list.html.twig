{% extends 'base.html.twig' %}

{% block title %}Liste des souhaits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Toutes les idées à réaliser</h1>

        {% if wishes is not empty %}
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Catégorie</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for wish in wishes %}
                    <tr>
                        <td>{{ wish.title }}</td>
                        <td>{{ wish.author }}</td>
                        <td>{{ wish.category ? wish.category.name : 'Aucune' }}</td>
                        <td>
                            <a href="{{ path('wish_detail', { id: wish.id }) }}" class="btn btn-sm btn-primary">
                                Voir détail
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-info">
                Aucune idée pour le moment.
            </div>
        {% endif %}
    </div>
{% endblock %}
