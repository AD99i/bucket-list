<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/favicon.png') }}" type="image/x-icon">

        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('styles/style.css') }}">

        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <header>
        <nav class="navbar bg-body-tertiary">
            <form class="container-fluid justify-content-start">
                <img src="{{ asset('/images/logo.png') }}" alt="Logo" width="30" height="24" class="d-inline-block align-text-top me-4">
                <a class="navbar-brand" href="{{ path('app_main') }}"><button class="btn btn-outline-primary me-2" type="button">Bucket List</button></a>
                <a class="navbar-brand" href="{{ path('wish_list') }}"><button class="btn btn-outline-primary me-2" type="button">Liste des souhaits</button></a>
                <a class="navbar-brand" href="{{ path('app_about') }}"><button class="btn btn-outline-primary me-2" type="button">About us</button></a>
            </form>
        </nav>
    </header>

    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>
        <div class="container">
            <p class="text-center">Â© Bucket-List | Application Symfony | {{ "now"|date("Y") }}</p>
        </div>
    </footer>
    </body>
</html>
